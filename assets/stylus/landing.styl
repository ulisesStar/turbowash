@font-face
    font-family Fira
    src url('/fonts/FiraSans-Regular.ttf')



.header
    height 60px
    margin-bottom 50px
    .md-button
        display flex
        flex-direction row
        justify-content space-between
        md-icon
            min-height inherit
            min-width inherit
            height inherit
            width 180px
            margin 0px
            svg
                width 180px



.promociones
    section.imagen
        @media mobile
            height 300px
            margin-top 50px

    .contenido
        .imagenpromocionada
            position relative
            @media mobile
                width 300px
            img
                width 90%
                @media mobile
                    width 100%
        .contacto
            width 100%
            display flex
            justify-content center
            align-items center
            form
                width 100%
                padding 20px
                background-color rgba(0, 0, 0, .1)
                h1
                    font-family Fira
                    text-align center
                    color #3e4095
                    text-transform uppercase
                md-input-container
                    margin 0px

                .md-button
                    background-color #ec1217

    .promociones-content
        display flex
        flex-direction row
        justify-content center
        align-items center
        .intereses
            width 100%
            max-height 200px
            img
                height 100%
        .tarjetas
            display flex
            .imagen-container
                width 200px
                margin 10 0px
                img
                    width 100px
